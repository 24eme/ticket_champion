{{> header}}
<section class="adaptative-div">
  <div class="container" style="flex: 1;">
    <div class="row">
      <div class="restaurant-cont">
        <h1 class="h1-restaurant">Liste des commandes passées par {{enterprise}} et qui doivent être livrées à {{time}}</h1>
        <div class="commandes-container row">
          {{#each commandes}}
          <div class="col-md-4 commandes-box">
            <h3 class="commandes-title">Commande n°{{this.id_commande}}</h3>
            <p class="commandes-info">❥ Nom du Client: {{this.client.nom}}</p>
            <div class="row">
              <div class="col-md-12">
                <h4 class="commandes-subtitle">❥ Plats :</h4>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Nom</th>
                      <th scope="col">Quantité</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each this.commandePlats}}
                    <tr>
                      <td>{{this.plat.nom_plat}}</td>
                      <td>{{this.quantite}}</td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
            {{#if this.commandeSupplements}}
            <div class="row">
              <div class="col-md-12">
                <h4 class="commandes-subtitle">❥ Suppléments :</h4>
                <table class="table">
                  <thead>
                    <tr>
                      <th scope="col">Nom</th>
                      <th scope="col">Quantité</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each this.commandeSupplements}}
                    <tr>
                      <td>{{this.supplement.nom_supplement}}</td>
                      <td>{{this.quantite}}</td>
                    </tr>
                    {{/each}}
                  </tbody>
                </table>
              </div>
            </div>
            {{/if}}
            <button class="btn btn-primary bouton-plats">Fait</button>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
{{> footer}}